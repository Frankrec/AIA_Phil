<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AIA_Phil</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AIA_Phil.styles.css" asp-append-version="true" />
    <!-- Bootstrap and Icons CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- LineIcons -->
    <link rel="stylesheet" href="https://cdn.lineicons.com/4.0/lineicons.css" />

    <!-- Google Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap">

    <!-- DataTables with Bootstrap 5 -->
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.4/css/dataTables.bootstrap5.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/3.1.1/css/buttons.bootstrap5.css">

    <!-- Date Picker -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

    <!-- Select2 Styles -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />

    <!-- FullCalendar Styles -->
    <link href='https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/6.0.0/index.min.css' rel='stylesheet' />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    
</head>
<body>
    <header class="position-sticky top-0" style="z-index: 10000;">
    <div class="wrapper">
        <div class="sidebar" id="sidebar">
            <nav class="navbar position-sticky top-0 w-100 p-1 d-flex justify-content-center shadow"
                     style="background-color: #053262 !important; z-index: 1050;">
                <a class="navbar-brand d-flex align-items-center gap-2" href="#">
                    <img src="/Images/E-Commerce SolutIONS.png" class="rounded-1" alt="Easy Shopping"
                         style="height: 3rem; width: auto; object-fit: contain;" />
                    <span class="fw-bold text-light fs-5">Jobby Shopping</span>
                </a>
            </nav>

          
            <div class="text-success">
                <hr class="m-0">
            </div>
            <div class="sidebar-content">
                <ul class="sidebar-nav">
                    <li class="sidebar-item">
                        <a asp-controller="Home" asp-action="Index" class="text-decoration-none sidebar-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
                            <i class="fa-solid fa-chart-pie"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <!--==========DROP DOWN FIXED=============-->
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link text-decoration-none
                            @(ViewContext.RouteData.Values["Controller"].ToString() == "ProductLists" && (ViewContext.RouteData.Values["Action"].ToString() == "Index" || ViewContext.RouteData.Values["Action"].ToString() == "Create" || ViewContext.RouteData.Values["Action"].ToString() == "Archive" || ViewContext.RouteData.Values["Action"].ToString() == "Edit") ? "active" : "")
                            @(ViewContext.RouteData.Values["Controller"].ToString() == "ProductBrands" && (ViewContext.RouteData.Values["Action"].ToString() == "Index" || ViewContext.RouteData.Values["Action"].ToString() == "Create" || ViewContext.RouteData.Values["Action"].ToString() == "Archive" || ViewContext.RouteData.Values["Action"].ToString() == "Edit") ? "active" : "")
                            @(ViewContext.RouteData.Values["Controller"].ToString() == "ProductCategories" && (ViewContext.RouteData.Values["Action"].ToString() == "Index" || ViewContext.RouteData.Values["Action"].ToString() == "Create" || ViewContext.RouteData.Values["Action"].ToString() == "Archive" || ViewContext.RouteData.Values["Action"].ToString() == "Edit") ? "active" : "")
                            @(ViewContext.RouteData.Values["Controller"].ToString() == "Units" && (ViewContext.RouteData.Values["Action"].ToString() == "Index" || ViewContext.RouteData.Values["Action"].ToString() == "Create" || ViewContext.RouteData.Values["Action"].ToString() == "Archive" || ViewContext.RouteData.Values["Action"].ToString() == "Edit") ? "active" : "")
                            @(ViewContext.RouteData.Values["Controller"].ToString() == "ProductAttributes" && (ViewContext.RouteData.Values["Action"].ToString() == "Index") ? "active" : "")"
                           data-bs-toggle="collapse" data-bs-target="#auth" aria-expanded="false" aria-controls="auth">
                            <i class="fa-solid fa-box-open"></i>
                            <span>Product</span>
                            <i class="fa-solid fa-caret-down float-end"></i>
                        </a>
                        <ul id="auth"
                            class="sidebar-dropdown list-unstyled collapse @(ViewContext.RouteData.Values["Controller"].ToString() == "ProductLists"
                                || ViewContext.RouteData.Values["Controller"].ToString() == "ProductBrands"
                                || ViewContext.RouteData.Values["Controller"].ToString() == "ProductCategories"
                                || ViewContext.RouteData.Values["Controller"].ToString() == "Units"
                                || ViewContext.RouteData.Values["Controller"].ToString() == "ProductAttributes" ? "show" : "")"
                            data-bs-parent="#sidebar">

                            <li class="sidebar-item">
                                <a asp-controller="ProductLists" asp-action="Index" class="sidebar-link text-decoration-none @(ViewContext.RouteData.Values["Controller"].ToString() == "ProductLists" ? "active" : "")">• Product</a>
                            </li>

                            <li class="sidebar-item">
                                <a asp-controller="ProductAttributes" asp-action="Index"
                                   class="sidebar-link text-decoration-none
                                     @(ViewContext.RouteData.Values["Controller"].ToString() == "ProductAttributes" ||
                                        ViewContext.RouteData.Values["Controller"].ToString() == "ProductBrands" ||
                                        ViewContext.RouteData.Values["Controller"].ToString() == "ProductCategories" ||
                                        ViewContext.RouteData.Values["Controller"].ToString() == "Units" ? "active" : "")">
                                    • Product Attributes
                                </a>

                            </li>
                        </ul>

                    </li>
                        <li class="sidebar-item">
                            <a asp-controller="Customer Orders" asp-action="Index" class="sidebar-link text-decoration-none @(ViewContext.RouteData.Values["Controller"].ToString() == "Accounts" && (new[]{"Index", "Create","Edit", "Delete", "Details"}.Contains(ViewContext.RouteData.Values["Action"].ToString())) ? "active" : "")">
                                <i class="lni lni-rocket"></i>
                                <span>Customer Orders</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a asp-controller="Features" asp-action="Index" class="sidebar-link text-decoration-none @(ViewContext.RouteData.Values["Controller"].ToString() == "Accounts" && (new[]{"Index", "Create","Edit", "Delete", "Details"}.Contains(ViewContext.RouteData.Values["Action"].ToString())) ? "active" : "")">
                                <i class="lni lni-rocket"></i>
                                <span>Features</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a asp-controller="Contact" asp-action="Index" class="sidebar-link text-decoration-none @(ViewContext.RouteData.Values["Controller"].ToString() == "Accounts" && (new[]{"Index", "Create","Edit", "Delete", "Details"}.Contains(ViewContext.RouteData.Values["Action"].ToString())) ? "active" : "")">
                                <i class="lni lni-envelope"></i>
                                <span>Contact</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a asp-controller="News" asp-action="Index" class="sidebar-link text-decoration-none @(ViewContext.RouteData.Values["Controller"].ToString() == "Accounts" && (new[]{"Index", "Create","Edit", "Delete", "Details"}.Contains(ViewContext.RouteData.Values["Action"].ToString())) ? "active" : "")">
                                <i class="lni lni-postcard"></i>
                                <span>News</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a asp-controller="Sell" asp-action="Index" class="sidebar-link text-decoration-none @(ViewContext.RouteData.Values["Controller"].ToString() == "Accounts" && (new[]{"Index", "Create","Edit", "Delete", "Details"}.Contains(ViewContext.RouteData.Values["Action"].ToString())) ? "active" : "")">
                                <i class="lni lni-dollar"></i>
                                <span>Sell</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a asp-controller="About" asp-action="Index" class="sidebar-link text-decoration-none @(ViewContext.RouteData.Values["Controller"].ToString() == "Accounts" && (new[]{"Index", "Create","Edit", "Delete", "Details"}.Contains(ViewContext.RouteData.Values["Action"].ToString())) ? "active" : "")">
                                <i class="lni lni-information"></i>
                                <span>About</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a asp-controller="Term and Policies" asp-action="Index" class="sidebar-link text-decoration-none @(ViewContext.RouteData.Values["Controller"].ToString() == "Accounts" && (new[]{"Index", "Create","Edit", "Delete", "Details"}.Contains(ViewContext.RouteData.Values["Action"].ToString())) ? "active" : "")">
                                <i class="lni lni-shield"></i>
                                <span>Term and Policies</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                           <a asp-controller="Accounts" asp-action="Index" class="sidebar-link text-decoration-none @(ViewContext.RouteData.Values["Controller"].ToString() == "Accounts" && (new[]{"Index", "Create","Edit", "Delete", "Details"}.Contains(ViewContext.RouteData.Values["Action"].ToString())) ? "active" : "")">
                             <i class="lni lni-cog"></i>
                             <span>Accounts</span>
                           </a>
                        </li>
                     
                </ul>
            </div>
        </div>
    </div>
</header>
<div class="content" id="content">

        <nav class="navbar navdesktopscreen navbar-expand-sm navbar-toggleable-sm navbar-dark" style="box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px; background-color: #053262 !important;">

        <div class="container-fluid">
            <div class="ham-controller m-0 ps-2 text-light" style="z-index: 1000;" onclick="toggleSidebar()">
                <i class="fa-solid fa-bars fs-3"></i>
            </div>
            @* <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/Image/TM.png" height="50rem" /></a> *@
            <button class="navbar-toggler my-2" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="fa-solid fa-caret-down"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between py-2">
                <ul class="navbar-nav flex-grow-1">
                    <li class="">
                        <!-- Add your items here if necessary -->
                    </li>
                </ul>
                <ul class="navbar-nav flex-grow-0 d-flex flex-row gap-2">

                    <li class="">
                        <a asp-controller="EditCurrentUser" asp-action="Index" class=" text-decoration-none btn btn-outline-primary @(ViewContext.RouteData.Values["Controller"].ToString() == "EditCurrentUser" && (new[] { "Index", "EditPassword", "Edit" }.Contains(ViewContext.RouteData.Values["Action"].ToString())) ? "active" : "")">
                           
                        </a>
                    </li>
                    <li class="">
                        <a class="text-decoration-none btn btn-outline-danger text-light" asp-controller="Login" asp-action="Logout">
                            <i class="fa-solid fa-power-off"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>

        </div>
    </nav>
    <div class="main p-3" style="height: 100vh; overflow-y: auto;">
        <main role="main" class="pb-5 mb-5 fade-in">
            @RenderBody()
            <center class="pb-3 d-flex justify-content-center align-items-center">
                @* @await Html.PartialAsync("_ToastNotification")
                @await Html.PartialAsync("_ToastNotificationError") *@
            </center>
        </main>
    </div>
    <span class="position-absolute bottom-0 end-0 bg-white w-100 pe-3 text-end d-md-block d-none" style="z-index: 1000; box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;"><a class="fs-6 text-dark text-decoration-none">&copy; 2025 - AIA Phil. All rights reserved.</a></span>
</div>


    <!-- Full Calendar -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/6.0.0/index.global.min.js'></script>

    <!-- jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.0/dist/jquery.min.js"></script>

    <!-- Select2 -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <!-- Flatpickr -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    <!-- Bootstrap Bundle (includes Popper) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.2/js/bootstrap.bundle.min.js"></script>

    <!-- DataTables -->
    <script src="https://cdn.datatables.net/2.1.4/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.1.4/js/dataTables.bootstrap5.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.1.1/js/dataTables.buttons.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.1.1/js/buttons.bootstrap5.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.1.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.1.1/js/buttons.print.min.js"></script>

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
